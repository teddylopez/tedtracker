<% @posts.each do |post| %>
  <tr>

    <td>
      <%= post.id %>
    </td>

    <td>
      <%= post.overtime_request %>
    </td>

    <td>
      <%= post.date %>
    </td>

    <td>
      <%= post.user.full_name %>
    </td>

    <td>
      <%= truncate(post.rationale) %>
    </td>

    <td>
    <%= status_label post.status %>
    </td>

    <td>
      <%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons index-icons' if policy(post).update? %>
    </td>

    <td>
      <%= link_to '', post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", class: 'glyphicon glyphicon-trash index-icons index-icons', data: { confirm: 'Are you sure?' } %>
    </td>

  </tr>
<% end %>
